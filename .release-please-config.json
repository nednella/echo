{
    "separate-pull-requests": true,
    "include-component-in-tag": true,
    "tag-separator": "@",
    "include-v-in-tag": true,
    "packages": {
        "client": {
            "path": "apps/client",
            "component": "client",
            "release-type": "node"
        },
        "api": {
            "path": "apps/api",
            "component": "api",
            "release-type": "simple",
            "extra-files": ["build.gradle", "src/main/java/com/example/echo_api/config/OpenApiConfig.java"]
        }
    },
    "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json"
}